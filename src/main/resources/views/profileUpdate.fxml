<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fxml>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ifrs.edu.com.controllers.ProfileUpdateController"
    stylesheets="@../styles/profileUpdate.css"
>
    <center>
        <VBox styleClass="profile-container">
            <Label text="Profile" styleClass="profile-title" />

            <HBox styleClass="label-container">
                <Label text="Name:"
                    minWidth="90"
                />
                <TextField
                    fx:id="nameInput"
                />
            </HBox>

            <HBox styleClass="label-container">
                <Label text="Username:"
                    minWidth="90"
                />
                <TextField
                    fx:id="usernameInput"
                />
            </HBox>

            <HBox styleClass="label-container">
                <Label text="Password:"
                    minWidth="90"
                />
                <PasswordField
                    fx:id="passwordInput"
                />
            </HBox>

            <HBox styleClass="label-container">
                <Label text="Confirm password:" styleClass="form-input-label"
                    minWidth="90"
                    maxWidth="90"
                />
                <PasswordField
                    fx:id="confirmPasswordInput"
                />
            </HBox>

            <HBox styleClass="label-container">
                <Button text="Cancel"
                    layoutX="400"
                    layoutY="250"
                    onAction="#cancelHandler"
                />
                <Button text="Confirm"
                    layoutX="400"
                    layoutY="250"
                    onAction="#confirmHandler"
                />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox styleClass="nav-container">
            <Button fx:id="profile" text="UsuÃ¡rios"
                layoutX="400"
                layoutY="250"
                onAction="#usersSceneHandler"
            />

            <Button fx:id="chat" text="Chat"
                layoutX="400"
                layoutY="250"
                onAction="#chatSceneHandler"
            />

            <Button fx:id="profile" text="Perfil"
                layoutX="400"
                layoutY="250"
                disable="true"
            />
        </HBox>
    </bottom>
</BorderPane>
