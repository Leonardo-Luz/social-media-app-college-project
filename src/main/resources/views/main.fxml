<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fxml>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ifrs.edu.com.controllers.MainController"
    stylesheets="@../styles/main.css"
>
    <center>
        <VBox>
            <TableView fx:id="messagesTable" styleClass="chat-table">
                <columns>
                    <TableColumn fx:id="columnMessage" prefWidth="320.0" styleClass="table-element"
                        text="message" />
                </columns>
            </TableView>
            <HBox styleClass="chat-input">
                <TextField
                    fx:id="chatInput"
                />
                <Button
                    text="Enviar"
                    onAction="#sendMessageHandler"
                />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox styleClass="nav-container">
            <Button fx:id="users" text="UsuÃ¡rios"
                layoutX="400"
                layoutY="250"
                onAction="#usersSceneHandler"
            />

            <Button fx:id="chat" text="Chat"
                layoutX="400"
                layoutY="250"
                disable="true"
            />

            <Button fx:id="profile" text="Perfil"
                layoutX="400"
                layoutY="250"
                onAction="#profileSceneHandler"
            />
        </HBox>
    </bottom>
</BorderPane>
